def main():
    dir = os.path.expanduser("~")+"/.tigervnc-xorg-7.5"
    cwd = os.getcwd()
    if not os.path.exists(dir):
        os.mkdir(dir)
    os.chdir(dir)

    for pkg in packages.keys():
        loc = packages[pkg]
        if ".tar.bz2" in loc:
            fname = pkg + ".tar.bz2"
        else :
            fname = pkg + ".tar.gz"
        if not os.path.exists(fname):
            assert 0 == os.spawnvp(os.P_WAIT, "wget", ["-N", "-c", "-O", fname, loc])

    os.chdir(cwd)
main()
